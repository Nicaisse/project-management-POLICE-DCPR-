@page
@model TESTASP_DCPR.Pages.conducteurs.SEARCH_YEAR
@{
    ViewData["title"] = "SEARCH_AGENT";

}

<h1></h1>

<div class="section-title">
    <h2 >SEARCH DRIVER CONTRAVENTION</h2>
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <form action="" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="display-5"> 
                <label asp-for="rech" class="control-label">Entrez le nif du conducteur</label>
                </div>
                <input  asp-for="rech" required  minlength="10" maxlength="10" class="form-control" placeholder="NIF DRIVER" />
                <span  ></span>
            </div><br>
            <div class="form-group">
                <div class="display-5"> 
                <label asp-for="rechdat" class="control-label">Entrez L'annee</label>
                </div>
                <input  asp-for="rechdat" required  min="2000" max="2023"   class="form-control" />
                <span  ></span>
            </div><br>

             <div class="">
                <label class="control-label"></label>
                <input name="searchAgent_contravention" id="form-control" type="submit" value="liste contravention" class="btn btn-primary" />
             <span class="text-danger"></span>
            </div>



            </form>
        </div>
    </div>
</div>@if (!ViewData.ModelState.IsValid)
{
        <div class="alert alert-danger">
            <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                        <li>@error.ErrorMessage</li>
            }
            </ul>
        </div>
}

@if (Model.searchC.Count == 0)
{
  
}
else
{

            <div class="table-responsive">
                    <table class="table">
                            <thead>
                                <tr>
                                    <th>CODE_AGENT</th>
                                    <th>NO_FICHE</th>
                                    <th>NODOSSIER</th>
                                    <th>PLAQUE</th>
                                    <th>TYPE_VEHICULE</th>
                                    <th>COULEUR</th>
                                    <th>MARQUE</th>
                                    <th>ADRESSE</th>
                                    <th>ARTIClE</th>
                                    <th>MONTANT</th>
                                    <th>DATE</th>
                                </tr>
                            </thead>
                            <tbody>
                @foreach (var item in Model.searchC)
                {
                                    <tr> 
                                        <td>@item.codeAgent</td>
                                        <td>@item.noFiche</td>
                                        <td>@item.noDossier</td>
                                        <td>@item.plaque</td>
                                        <td>@item.typeVehicule</td>
                                        <td>@item.couleur</td>
                                        <td>@item.marque</td>
                                        <td>@item.adresse</td>
                                        <td>@item.articleViolation</td>
                                        <td>@item.montantAPayer</td>
                                        <td>@item.dateContravention</td>
                                    </tr>
                }
                            </tbody>
                    </table>




            </div>
}

</div>
