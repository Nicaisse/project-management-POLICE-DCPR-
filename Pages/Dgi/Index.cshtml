@page
@model TESTASP_DCPR.Pages_Dgi.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="section-title">
    <h2 class="display-8">LISTE DE PAIEMENT DGI</h2>

</div>

<p class="text-center">
    <a asp-page="./Etape1" class=" btn btn-primary display-8">proceed to new payment</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DGI[0].noFiche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DGI[0].montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DGI[0].remarque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DGI[0].datePaiment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DGI) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.noFiche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.montant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.remarque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datePaiment)
            </td>
        </tr>
}
    </tbody>
</table>
<style>



.left-section {
