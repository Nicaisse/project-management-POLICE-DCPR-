@page
@model TESTASP_DCPR.Pages_contravention.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="section-title">
    <h2>LIST CONTRAVENTION</h2>
</div>
<div class="text-center">
    <a  class="btn btn-primary" asp-page="./Control">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
              NO_DOSSIER
            </th>
            <th>
              NO_FICHE
            </th>
            <th>
                PLAQUE
            </th>
            <th>
               MODEL
            </th>
            <th>
               COULEUR
            </th>
            <th>
                MARQUE
            </th>
            <th>
                ID_AGENT
            </th>
            <th>
                ADRESSE
            </th>
            <th>
               ARTICLE
            </th>
            <th>
               MONTANT
            </th>
            <th>
               DATE
            </th>
            <th>
               STATUT
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contravention) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.noDossier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.noFiche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.plaque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.typeVehicule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.couleur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codeAgent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.articleViolation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.montantAPayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateContravention)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            
        </tr>
}
    </tbody>
</table>
